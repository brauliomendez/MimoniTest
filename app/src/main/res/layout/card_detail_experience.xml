<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="300dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_experience_image_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:src="@drawable/valladolid"/>

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/detail_experience_image_view"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_small"/>

        <TextView
            android:id="@+id/detail_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/detail_experience_image_view"
            android:layout_toRightOf="@id/price_text_view"
            android:layout_toEndOf="@id/price_text_view"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_small"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>