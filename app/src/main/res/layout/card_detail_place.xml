<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_place_image_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:src="@drawable/valladolid"/>

        <TextView
            android:id="@+id/autor_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/detail_place_image_view"
            android:textStyle="bold"
            android:text="$10"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/detail_job_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/detail_place_image_view"
            android:layout_toRightOf="@id/autor_text_view"
            android:layout_toEndOf="@id/autor_text_view"
            android:text="Sample title"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>