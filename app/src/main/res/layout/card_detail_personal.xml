<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_personal_image_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/detail_service_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/detail_personal_image_view"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_small"/>

        <TextView
            android:id="@+id/detail_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/detail_personal_image_view"
            android:layout_toRightOf="@id/detail_service_text_view"
            android:layout_toEndOf="@id/detail_service_text_view"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:textSize="@dimen/font_small"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>